<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	<ScrollView
		android:id="@+id/vscroll1"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:padding="8dp">
		<LinearLayout
			android:id="@+id/linear1"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="8dp"
			android:orientation="vertical">
			<ImageView
				android:id="@+id/imageview1"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="18dp"
				android:src="@drawable/runner"
				android:scaleType="center"
				android:layout_gravity="center_horizontal|center_vertical"/>
			<TextView
				android:id="@+id/textview1"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:text="Penulis: James Dashner\nArtis penutup: Picasso\nNegara: Amerika Serikat\nBahasa: Inggris\nAliran:Petualangan, Fiksi ilmiah, Dystopian, Fiksi dewasa muda\nPenerbit: Delacorte\nTerbit: 2009-2016"
				android:textSize="14sp"
				android:textStyle="bold"
				android:textColor="#000000"
				android:layout_gravity="center_horizontal|center_vertical"/>
			<TextView
				android:id="@+id/textview2"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:text="The Maze Runner adalah serangkaian novel fiksi ilmiah dystopian dewasa muda yang ditulis oleh penulis Amerika James Dashner."
				android:textSize="12sp"
				android:textColor="#000000"/>
			<TextView
				android:id="@+id/textview4"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:text="Serial ini, mengungkapkan rincian dalam tatanan non-kronologis, menceritakan bagaimana dunia dihancurkan oleh serangkaian suar matahari besar dan ejeksi massa koronal ."
				android:textSize="12sp"
				android:textColor="#000000"/>
			<TextView
				android:id="@+id/textview6"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:text="Serial ini terdiri dari The Maze Runner (2009), The Scorch Trials (2010) dan The Death Cure (2011), serta dua novel prekuel, The Kill Order (2012) dan The Fever Code (2016) ), dan buku pendamping berjudul The Maze Runner Files (2013)."
				android:textSize="12sp"
				android:textColor="#000000"/>
			<TextView
				android:id="@+id/textview5"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:text="Adaptasi Film"
				android:textSize="14sp"
				android:textStyle="bold"
				android:textColor="#000000"/>
			<TextView
				android:id="@+id/textview3"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:text="The Maze Runner : Pengembangan untuk film dimulai pada Januari 2011 ketika 20th Century Fox membeli hak film untuk seri novel Dashner. Dimulai di Baton Rouge, Louisiana pada Mei 2013 dan berakhir pada Juli. Album ini dirilis pada 19 September 2014."
				android:textSize="12sp"
				android:textColor="#000000"/>
			<TextView
				android:id="@+id/textview7"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:text="Maze Runner: The Scorch Trials : Fotografi utama dimulai di Albuquerque, New Mexico pada Oktober 2014 dan berakhir pada Januari 2015. Album ini dirilis pada 18 September 2015."
				android:textSize="12sp"
				android:textColor="#000000"/>
			<TextView
				android:id="@+id/textview8"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:text="Maze Runner: The Death Cure : Fotografi utama dimulai di Afrika Selatan pada Maret 2017 dan dirilis pada 26 Januari 2018."
				android:textSize="12sp"
				android:textColor="#000000"/>
			<Button
				android:id="@+id/button1"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:text="Back to Catalog"
				android:textSize="14sp"
				android:textStyle="bold"
				android:textColor="#000000"/>
		</LinearLayout>
	</ScrollView>
</LinearLayout>
